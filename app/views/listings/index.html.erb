<h1> Listing Index </h1>

<h6> Search Title </h6>
 <!-- changed from local true to remote true -->
<%= form_with url: listings_path, method: "get" do %>
    <%= label_tag(:title, "Title:") %>
    <%= text_field_tag(:title) %> 

    <%= label_tag(:min_price, "Minimum Price:") %>
    <%= text_field_tag(:min_price) %> 

    <%= label_tag(:max_price, "Maximum Price:") %>
    <%= text_field_tag(:max_price) %> 

    <%= submit_tag("Search") %>
<% end %>




<hr>

<div id="listing_index">
    <%= render partial: '/listings/result' %>

</div>