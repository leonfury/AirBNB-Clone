<h1> User Index </h1>
<%= paginate @users %>
<table class="table">
    <tr>
        <th> ID </th>
        <th> First Name </th>
        <th> Last Name </th>
        <th> Email </th>
        <th> Joined On </th>
        <th> View </th>
        <th> Edit </th>
        <th> Delete </th>
    </tr>

    <% @users.each do |user| %>
        <tr>
            <th> <%= user.id %> </th>
            <th> <%= user.first_name %> </th>
            <th> <%= user.last_name %> </th>
            <th> <%= user.email %> </th>
            <th> <%= user.created_at %> </th>
            <th>
                <%= link_to "View User", user_path(user.id), class: "btn btn-secondary outline" %>
            </th>
            <th>
                <%= link_to "Edit User", edit_user_path(user.id), class: "btn btn-secondary outline" %>
            </th>
            <th>
                <%= link_to "Delete User", user_path(user.id), class: "btn btn-secondary outline", method: :delete %>
            </th>
        </tr>
    <% end %>
</table>